{
  "name": "@daml/hub-react",
  "version": "0.2.0",
  "description": "Daml React functions for Daml Hub.",
  "homepage": "https://projectdabl.com",
  "keywords": [
    "dabl",
    "daml hub",
    "daml",
    "react",
    "client",
    "API"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "files": [
    "lib/**/*"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@daml/react": "1.11.1",
    "@daml/ledger": "1.11.1",
    "@mojotech/json-type-validation": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "react": "^16.12.0"
  },
  "repository": "github:digital-asset/dabl-react",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "test": "jest",
    "lint": "eslint --ext .ts --ignore-pattern lib/ --max-warnings 0 ./"
  },
  "devDependencies": {
    "@daml/types": "1.11.1",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.20",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "jest": "^26.1.0",
    "jest-fetch-mock": "^3.0.3",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^26.1.1",
    "typescript": "~3.8.3"
  },
  "resolutions": {
    "@types/react": "^16.9.20"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  }
}
