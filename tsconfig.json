{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "DOM",
      "es2015"
    ],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "lib/",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
